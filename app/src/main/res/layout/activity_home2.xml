<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:id="@id/relative1"
      android:gravity="top">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:cardCornerRadius="30dp"
          app:cardElevation="0dp"

          >

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:adjustViewBounds="true"
          android:scaleType="centerCrop"
          android:background="@drawable/bagggg"></ImageView>
      </androidx.cardview.widget.CardView>
  </LinearLayout>


        <LinearLayout
            android:id="@+id/relative2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"

            android:layout_height="75dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Parent Side"
                    android:textSize="25dp"
                    android:gravity="bottom|left"
                    android:paddingLeft="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="end|bottom"
                >
                <Button
                    android:id="@+id/seeall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="See all"
                    android:textColor="#ffffff"
                    android:background="@drawable/short_radius_round"
                    android:textAllCaps="false">

                </Button>
            </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:id="@+id/relative3"

    android:layout_width="match_parent"
    android:layout_height="310dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
       >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
               >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="290dp"
                    android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile"
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                   >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                   app:cardElevation="0dp"

                    >
                    <ImageView
                        android:id="@+id/img1"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/travel_card" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Have Vacation's"
                        android:textColor="#ffffff"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:layout_marginVertical="150dp"
                        android:textSize="25dp"></TextView>
</androidx.cardview.widget.CardView>
  </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Parent should have vacation with their child at fix interval of time for refreshment."></TextView>

    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                   >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/img2"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/be_a_friend_card" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Be a Friend"
                            android:textColor="#ffffff"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginVertical="150dp"
                            android:textSize="25dp"></TextView>
                    </androidx.cardview.widget.CardView>
</LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Treat your child as a friend so he/she is more comfortable to share something with you."></TextView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/img3"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/spend_time_card" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Spend Time"
                            android:textColor="#ffffff"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginVertical="150dp"
                            android:textSize="25dp"></TextView>
                    </androidx.cardview.widget.CardView>
</LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Spend more time with your child and be helpful to each other in everything."></TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/parent_fight_card" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Never fight in front"
                            android:textColor="#ffffff"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginVertical="150dp"
                            android:textSize="25dp"></TextView>
                    </androidx.cardview.widget.CardView>
</LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="When parents are fighting, it's physiologically traumatic for kids. their blood pressure increases."></TextView>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/img5"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/daily_connection_card" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Daily Connection"
                            android:textColor="#ffffff"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginVertical="150dp"
                            android:textSize="25dp"></TextView>
                    </androidx.cardview.widget.CardView>
  </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Snuggle your child first thing in the morning for a few minutes, and last thing at night."></TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/img6"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/moral_value_card" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Moral Values"
                            android:textColor="#ffffff"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginVertical="150dp"
                            android:textSize="25dp"></TextView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Teach them moral values of life and guide them the real path of success in life."></TextView>

            </LinearLayout>
        </LinearLayout>

            </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>

